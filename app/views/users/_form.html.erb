<div class = "container">
<div class="contants">
<div class ="t_menu">
<%= form_with(model: @user, local: true ,url: new_or_edit ) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="user_table">

<table class = "user_form">
<tr>

<div class="user_edit" >
<th><%= form.label :名前 %></th>
<th><%= form.text_field :name %></th>
  </div>
</tr>
<br>
<tr>

<div class="user_edit" >
<th><%= form.label :メールアドレス %></th>
<th><%= form.email_field :email %></th>
  </div>
</tr>
<br>
<tr>

<div class="user_edit" >
<th><%= form.label :パスワード %></th>
<th><%= form.password_field :password %></th>
  </div>
</tr>
<br>
<tr>

<div class="user_edit" >
<th><%= form.label :同じパスワードを入力 %></th>
<th><%= form.password_field :password_confirmation %></th>
  </div>
</tr>
</table>
</div>
<br>

<div class="user_edit" >
  <div class ="mx-auto" style ="width: 200px;">
  <%= form.label :ユーザー画像 %>
  <%= form.file_field :icon %>
  </div>
</div>

<br>

  <%= form.submit "登録", class: 'botton' %>

  <br>
  <br>
  <%= link_to "戻る", user_path %>
<% end %>
</div>
</div>
</div>
