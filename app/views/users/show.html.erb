<div class="contants">
<div class="container">
  <div class ="t_menu">
<br><%= image_tag @user.icon, class: 'icon' %>
<h1><%= @user.name %>のページ</h1>
<p><%= notice %></p>
<br>
<% if logged_in? %>
<% if @user == current_user %>
<div class="rink">

<li><a><%= link_to "編集", edit_user_path %></a></li>
<br>
<li><a><%= link_to "お気に入り", favorite_posts_path %></a></li>
<br>
<% end %>
<% end %>
<li><a><%= link_to "フォロー", following_user_path(@user) %></a></li>
<br>
<li>
  <a><%= link_to "フォロワー", followers_user_path(@user) %></a>
  </li>
</div>

<h2>
  <%= @user.name %>さんの投稿
  </h2>
<% @posts.each do |post| %>
  <div class="col-xs-12 col-md-6">
    <p><%= image_tag post.image, class: 'img-responsive center-block' %></p>
    <p><%= post.content %></p>
    <% end %>

</div>
</div>
</div>
