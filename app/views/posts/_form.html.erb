<div class="t_menu">
<%= form_with(model: @post, local: true, url:choose_new_or_edit) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="filed">
    <%= form.label :画像 %>
    <%= image_tag(@post.image.url, class: 'img-responsive center-block') if @post.image.url %>
    <div class ="mx-auto" style ="width: 200px;">
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>
  </div>
  <br>
  <div class="image_title">
    <%= form.label :内容 %>
    <%= form.text_field :content %>
  </div>
  <br>
  <%= form.submit "送信", class: 'botton' %>
<% end %>
<br>
<%= link_to "投稿一覧画面にもどる", posts_path %>
</div>
